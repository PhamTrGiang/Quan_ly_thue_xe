<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfomationActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:id="@+id/idCallback"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Infomation account"
            android:gravity="center"
            android:textSize="30dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgInfo"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_baseline_person_24" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/backgroud_quanlyloaixe">

        <TextView
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/edFullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Full name" />

        <TextView
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/edPhonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Phone number" />

        <TextView
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/edIdentification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="Identification" />
    </LinearLayout>
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="150dp"
        android:background="@drawable/backgroup_button_color"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:text="Edit"
        android:layout_marginTop="170dp"
        />



</LinearLayout>