<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:gravity="center"
    android:background="@drawable/img"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"

        >
        <EditText
            android:background="@drawable/backgroup_dn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập tên đăng nhập"
            android:id="@+id/txtemail"
            android:inputType="textEmailAddress"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="nhập password"
            android:id="@+id/txtpassword"
            android:layout_marginTop="10dp"
            android:shadowRadius="@integer/material_motion_duration_long_2"
            android:background="@drawable/backgrouppas"
            />
    </LinearLayout>


    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/Login"
            android:textStyle="bold|normal"
            android:background="@drawable/backgroud_quanlyloaixe"
        />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:id="@+id/dangky"
            android:layout_marginLeft="20dp"
            android:textStyle="bold|italic"
            android:background="@drawable/backgroup_quanlyxe"
            />

    </LinearLayout>


</LinearLayout>